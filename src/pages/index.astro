---
import TerminalLayout from '../layouts/TerminalLayout.astro';
import resumeEn from '../data/resume.json';

// Import Components
import Header from '../components/cv/Header.astro';
import Skills from '../components/cv/Skills.astro';
import Experience from '../components/cv/Experience.astro';
import Education from '../components/cv/Education.astro';
import Achievements from '../components/cv/Achievements.astro';
import Projects from '../components/cv/Projects.astro';
import Services from '../components/cv/Services.astro';
import Contact from '../components/cv/Contact.astro';
import ProjectModal from '../components/ProjectModal.astro';
---

<TerminalLayout title={`${resumeEn.basics.name} - DevOps Engineer`} description={resumeEn.basics.summary}>
    
    <!-- 1. Header Section -->
    <Header />

    <!-- 2. Skills Section -->
    <Skills />

    <!-- 3. Experience Section -->
    <Experience />

    <!-- 4. Education Section -->
    <Education />

    <!-- 5. Achievements Section -->
    <Achievements />

    <!-- 6. Projects Section -->
    <Projects />

    <!-- 7. Services Section -->
    <Services />

    <!-- 8. Contact Section -->
    <Contact />

    <!-- 9. Modal Logic & Markup (Hidden by default) -->
    <ProjectModal />

</TerminalLayout>